@model GenomeViewModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
	<h1>@(Model.Name)</h1>
	@{
		if (Model.DataFileExists)
		{
			<form action="" method="post" enctype="multipart/form-data">
				<div>
					<table>
						<thead>
							<tr>
								<td>Cluster Id</td>
								<td>Chromosome</td>
								<td>Position</td>
								<td>Genotype</td>
							</tr>
						</thead>
						<tbody>
							@{
			foreach (GeneX.Model.SNP snp in Model.SNPs)
			{
				<tr>
							<td>@(snp.ClusterId)</td>
					<td>@(snp.Chromosome)</td>
					<td>@(snp.Position)</td>
					<td>@(snp.Genotype)</td>
							</tr>
			}
							}
						</tbody>
					</table>
				</div>
			</form>
			<div><span>Upload Updated File</span></div>
		}
		else
		{
			<div><span>Upload Gene File</span></div>
		}
		<form action="" method="post" enctype="multipart/form-data">
			@(Html.HiddenFor(m => m.Id))
			<label for="file">Filename:</label>
			<input type="file" name="file" id="file" />
			<input type="submit" />
		</form>
}
</div>